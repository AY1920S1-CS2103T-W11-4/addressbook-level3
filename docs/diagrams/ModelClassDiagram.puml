@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model <<Rectangle>>{
Interface ReadOnlyDishDatabase <<Interface>>
Interface Model <<Interface>>
Interface ObservableList <<Interface>>
Class ReadOnlyDishDatabase
Class Model
Class ModelManager
Class UserPrefs
Class ReadOnlyUserPrefs
Class CalorieBudget

Package Dish {
Class DishDatabase
Class Dish
Class Calorie
Class Name
Class UniqueDishList
}

Package Meal {
Class Meal
Class MealLog
}

Package Tag {
Class Tag
}

Package Util {
Class Statistics
Class TimeStamp
}
}


Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

DishDatabase .up.|> ReadOnlyDishDatabase

ModelManager .up.|> Model
Model .right.> ObservableList
ModelManager o--> "1" DishDatabase
ModelManager o--> "1" MealLog
ModelManager o-left-> "1" UserPrefs
ModelManager o-right-> "1" CalorieBudget
ModelManager o--> "1" Statistics
UserPrefs .up.|> ReadOnlyUserPrefs

DishDatabase *--> "1" UniqueDishList
UniqueDishList o--> "*" Dish
MealLog o--> "*" Meal
Dish *--> "1" Name
Dish *--> "1" Calorie
Dish *--> "*" Tag
Meal *--> "1" Dish
Meal *--> "1" TimeStamp

Name -[hidden]right-> Calorie
Calorie -[hidden]right-> Tag
DishDatabase -[hidden]right-> MealLog
Tag -[hidden]right-> TimeStamp

ModelManager -->"1" Dish : filtered list
ModelManager -->"1" Meal : filtered list
ModelManager -->"1" Meal : sorted list
@enduml
